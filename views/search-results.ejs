<!-- views/search-results.ejs -->
<%- include('partials/header', { title: 'Search Results - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: false }) %>

<div class="main-content">
    <div class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1><i class="fas fa-search me-3"></i>Search Results</h1>
                    <p class="lead">
                        <% if (posts && posts.length > 0) { %>
                            Found <%= posts.length %> result<%= posts.length !== 1 ? 's' : '' %> for "<%= query %>"
                        <% } else { %>
                            No results found for "<%= query %>"
                        <% } %>
                        <% if (selectedCategory) { %>
                            <% const categoryName = categories.find(c => c.slug === selectedCategory)?.name || selectedCategory %>
                            in <%= categoryName %>
                        <% } %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Main content -->
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Search: "<%= query %>"
                        </li>
                    </ol>
                </nav>
                
                <!-- Search form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="search-query" class="form-label">Search Terms</label>
                                    <input type="text" class="form-control" id="search-query" name="q" 
                                           value="<%= query %>" placeholder="Enter search terms..." required>
                                </div>
                                <div class="col-md-4">
                                    <label for="search-category" class="form-label">Category Filter</label>
                                    <select class="form-select" id="search-category" name="category">
                                        <option value="">All Categories</option>
                                        <% if (categories && categories.length > 0) { %>
                                            <% categories.forEach(function(category) { %>
                                                <option value="<%= category.slug %>" <%= selectedCategory === category.slug ? 'selected' : '' %>>
                                                    <%= category.name %> (<%= category.post_count %>)
                                                </option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn btn-primary w-100" type="submit">
                                        <i class="fas fa-search me-2"></i>Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <% if (posts && posts.length > 0) { %>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Search Results
                            <span class="badge bg-primary ms-2"><%= posts.length %></span>
                        </h2>
                        <a href="/" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Back to All Posts
                        </a>
                    </div>
                    
                    <% posts.forEach(function(post) { %>
                        <div class="post-card">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="card-title h4 mb-0">
                                        <%- post.title.replace(new RegExp(`(${query})`, 'gi'), '<mark>$1</mark>') %>
                                    </h3>
                                    <% if (post.category_name) { %>
                                        <a href="/category/<%= post.category_slug %>" class="text-decoration-none">
                                            <span class="badge rounded-pill" 
                                                  style="background-color: '<%= post.category_color %>';">
                                                <%= post.category_name %>
                                            </span>
                                        </a>
                                    <% } %>
                                </div>
                                
                                <p class="post-date mb-3">
                                    <i class="far fa-calendar me-2"></i>
                                    <%= new Date(post.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                                
                                <div class="card-text">
                                    <%- post.content.replace(new RegExp(`(${query})`, 'gi'), '<mark>$1</mark>').replace(/\n/g, '<br>') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No results found</h4>
                        <p class="text-muted">
                            No posts match your search for "<%= query %>"
                            <% if (selectedCategory) { %>
                                <% const categoryName = categories.find(c => c.slug === selectedCategory)?.name || selectedCategory %>
                                in the <%= categoryName %> category
                            <% } %>.
                        </p>
                        <div class="mt-4">
                            <h6>Try:</h6>
                            <ul class="list-unstyled">
                                <li>• Using different keywords</li>
                                <li>• Checking your spelling</li>
                                <li>• Using more general terms</li>
                                <% if (selectedCategory) { %>
                                    <li>• <a href="/search?q=<%= encodeURIComponent(query) %>">Searching in all categories</a></li>
                                <% } %>
                            </ul>
                        </div>
                        <a href="/" class="btn btn-primary mt-3">
                            <i class="fas fa-arrow-left me-2"></i>View All Posts
                        </a>
                    </div>
                <% } %>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Quick Search -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Search</h5>
                    </div>
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <div class="input-group">
                                <input type="text" class="form-control" name="q" placeholder="New search..." required>
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Categories Widget -->
                <% if (categories && categories.length > 0) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Search by Category</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="/search?q=<%= encodeURIComponent(query) %>" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= !selectedCategory ? 'active' : '' %>">
                                <span><i class="fas fa-list me-2"></i>All Categories</span>
                            </a>
                            <% categories.forEach(function(category) { %>
                                <% if (category.post_count > 0) { %>
                                <a href="/search?q=<%= encodeURIComponent(query) %>&category=<%= category.slug %>" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= selectedCategory === category.slug ? 'active' : '' %>">
                                    <span>
                                        <span class="badge rounded-pill me-2" 
                                              style="background-color: '<%= category.color %>'; width: 12px; height: 12px;"></span>
                                        <%= category.name %>
                                    </span>
                                    <span class="badge bg-secondary rounded-pill"><%= category.post_count %></span>
                                </a>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <!-- Search Tips -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Search Tips</h5>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">
                            <strong>Search tips:</strong><br>
                            • Use simple keywords<br>
                            • Try different word combinations<br>
                            • Filter by category for better results<br>
                            • Check spelling and try synonyms
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>