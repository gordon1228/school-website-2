<!-- views/dashboard.ejs -->
<%- include('partials/header', { title: 'Admin Dashboard - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: true }) %>

<div class="main-content">
<div class="admin-header">
    <div class="container">
        <h1><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
        <p class="mb-0">Manage your school website content</p>
    </div>
</div>

<div class="container">
    <div class="dashboard-actions">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h4 class="mb-3 mb-md-0">
                    <i class="fas fa-newspaper me-2"></i>Posts Management
                </h4>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="btn-group" role="group">
                    <a href="/admin/create" class="btn btn-admin">
                        <i class="fas fa-plus me-2"></i>Create New Post
                    </a>
                    <a href="/admin/categories" class="btn btn-outline-secondary">
                        <i class="fas fa-tags me-2"></i>Manage Categories
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Category filter -->
    <% if (categories && categories.length > 0) { %>
    <div class="card mb-4">
        <div class="card-body py-3">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <label class="form-label mb-0"><strong>Filter by Category:</strong></label>
                </div>
                <div class="col-md-9">
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-sm btn-outline-secondary category-filter active" data-category="all">
                            All Posts
                        </button>
                        <% categories.forEach(function(category) { %>
                            <button class="btn btn-sm btn-outline-secondary category-filter" 
                                    data-category="<%= category.id %>"
                                    style="border-color: '<%= category.color %>'; color: '<%= category.color %>';">
                                <%= category.name %> 
                                <span class="badge bg-light text-dark ms-1"><%= category.post_count %></span>
                            </button>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    
    <div class="row">
        <div class="col-12">
            <% if (posts && posts.length > 0) { %>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="text-muted small">
                                    <i class="fas fa-arrows-alt me-2"></i>
                                    Drag the <i class="fas fa-grip-vertical mx-1"></i> icon to reorder posts
                                </div>
                                <button id="save-order-btn" class="btn btn-outline-success">
                                    <i class="fas fa-save me-2"></i>Save Post Order
                                </button>
                            </div>
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="50">Order</th>
                                        <th>Title</th>
                                        <th width="120">Category</th>
                                        <th class="d-none d-md-table-cell" width="150">Date</th>
                                        <th class="text-center" width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="sortable-posts">
                                    <% posts.forEach(function(post, index) { %>
                                        <tr data-id="<%= post.id %>" data-category="<%= post.category_id || 'null' %>">
                                            <td class="align-middle">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-grip-vertical me-2" title="Drag to reorder"></i>
                                                    <small class="text-muted">#<%= index + 1 %></small>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <h6 class="mb-1"><%= post.title %></h6>
                                                <small class="text-muted d-md-none">
                                                    <%= new Date(post.date).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td class="align-middle">
                                                <% if (post.category_name) { %>
                                                    <span class="badge rounded-pill" 
                                                          style="background-color: '<%= post.category_color %>';">
                                                        <%= post.category_name %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary rounded-pill">Uncategorized</span>
                                                <% } %>
                                            </td>
                                            <td class="d-none d-md-table-cell align-middle">
                                                <small class="text-muted">
                                                    <%= new Date(post.date).toLocaleDateString('en-US', { 
                                                        year: 'numeric', 
                                                        month: 'short', 
                                                        day: 'numeric' 
                                                    }) %>
                                                </small>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="btn-group" role="group">
                                                    <a href="/admin/edit/<%= post.id %>" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Edit post">
                                                        <i class="fas fa-edit"></i>
                                                        <span class="d-none d-sm-inline ms-1">Edit</span>
                                                    </a>
                                                    <form method="POST" action="/admin/delete/<%= post.id %>" 
                                                    style="display: inline;" 
                                                    onsubmit="return confirm(`Are you sure you want to delete this post?\n\nPost: <%= post.title.replace(/'/g, '\\\'') %>`)">
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-outline-danger"
                                                            title="Delete post">
                                                        <i class="fas fa-trash"></i>
                                                        <span class="d-none d-sm-inline ms-1">Delete</span>
                                                    </button>
                                                </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No posts yet</h4>
                        <p class="text-muted">Create your first post to get started.</p>
                        <a href="/admin/create" class="btn btn-admin">
                            <i class="fas fa-plus me-2"></i>Create Your First Post
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
</div>

<script>
// Category filtering functionality
document.addEventListener('DOMContentLoaded', function() {
    const categoryFilters = document.querySelectorAll('.category-filter');
    const postRows = document.querySelectorAll('#sortable-posts tr[data-id]');
    
    categoryFilters.forEach(filter => {
        filter.addEventListener('click', function() {
            // Update active state
            categoryFilters.forEach(f => f.classList.remove('active'));
            this.classList.add('active');
            
            const selectedCategory = this.dataset.category;
            
            // Show/hide posts based on category
            postRows.forEach(row => {
                const postCategory = row.dataset.category;
                
                if (selectedCategory === 'all' || 
                    postCategory === selectedCategory || 
                    (selectedCategory === 'null' && postCategory === 'null')) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
            
            // Update row numbers for visible posts
            let visibleIndex = 1;
            postRows.forEach(row => {
                if (row.style.display !== 'none') {
                    const orderCell = row.querySelector('td:first-child small');
                    if (orderCell) {
                        orderCell.textContent = `#${visibleIndex}`;
                        visibleIndex++;
                    }
                }
            });
        });
    });
});
</script>

<%- include('partials/footer') %>