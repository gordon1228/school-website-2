<!-- views/create-post.ejs -->
<%- include('partials/header', { title: 'Create Post - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: true }) %>
<div class="main-content">
<div class="admin-header">
    <div class="container">
        <h1><i class="fas fa-plus-circle me-2"></i>Create New Post</h1>
        <p class="mb-0">Add a new announcement, news, or update</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                            <ul class="mb-0">
                                <% errors.forEach(function(error) { %>
                                    <li><%= error %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    
                    <form method="POST" action="/admin/create">
                        <div class="mb-3">
                            <label for="title" class="form-label">Post Title *</label>
                            <input type="text" 
                                   class="form-control <%= errors && errors.some(e => e.includes('Title')) ? 'is-invalid' : '' %>" 
                                   id="title" 
                                   name="title" 
                                   value="<%= title %>"
                                   placeholder="Enter post title..." 
                                   required>
                            <div class="form-text">Maximum 255 characters</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="category_id" class="form-label">Category</label>
                            <select class="form-select" id="category_id" name="category_id">
                                <option value="">-- Select Category (Optional) --</option>
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category.id %>" <%= category_id == category.id ? 'selected' : '' %>>
                                            <%= category.name %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                            <div class="form-text">Categorize your post to help organize content</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="content" class="form-label">Post Content *</label>
                            <textarea class="form-control <%= errors && errors.some(e => e.includes('Content')) ? 'is-invalid' : '' %>" 
                                      id="content" 
                                      name="content" 
                                      rows="12" 
                                      placeholder="Enter post content..." 
                                      required><%= content %></textarea>
                            <div class="form-text">Maximum 10,000 characters. You can use line breaks to format your content.</div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/admin/dashboard" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-admin">
                                <i class="fas fa-save me-2"></i>Create Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Category preview -->
            <% if (categories && categories.length > 0) { %>
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-tags me-2"></i>Available Categories</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <% categories.forEach(function(category) { %>
                            <span class="badge rounded-pill" 
                                  style="background-color: '<%= category.color %>'; cursor: pointer;"
                                  onclick="document.getElementById('category_id').value='<%= category.id %>'">
                                <%= category.name %>
                            </span>
                        <% }); %>
                    </div>
                    <small class="text-muted mt-2 d-block">Click on a category badge to select it quickly</small>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
</div>

<%- include('partials/footer') %>