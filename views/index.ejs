<!-- views/index.ejs -->
<%- include('partials/header', { title: 'Home - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: false }) %>

<div class="main-content">
    <div class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1><i class="fas fa-graduation-cap me-3"></i>Welcome to Our School</h1>
                    <p class="lead">Stay updated with the latest news, announcements, and important information.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Main content -->
            <div class="col-lg-8">
                <h2 class="mb-4">
                    <i class="fas fa-bullhorn me-2"></i>Latest Updates
                </h2>
                
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(function(post) { %>
                        <div class="post-card">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="card-title h4 mb-0"><%= post.title %></h3>
                                    <% if (post.category_name) { %>
                                        <a href="/category/<%= post.category_slug %>" class="text-decoration-none">
                                            <span class="badge rounded-pill" 
                                                  style="background-color: '<%= post.category_color %>';">
                                                <%= post.category_name %>
                                            </span>
                                        </a>
                                    <% } %>
                                </div>
                                
                                <p class="post-date mb-3">
                                    <i class="far fa-calendar me-2"></i>
                                    <%= new Date(post.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                                
                                <div class="card-text">
                                    <%- post.content.replace(/\n/g, '<br>') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No posts available</h4>
                        <p class="text-muted">Check back later for updates and announcements.</p>
                    </div>
                <% } %>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Categories Widget -->
                <% if (categories && categories.length > 0) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="/" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-list me-2"></i>All Posts</span>
                                <span class="badge bg-primary rounded-pill">
                                    <%= posts ? posts.length : 0 %>
                                </span>
                            </a>
                            <% categories.forEach(function(category) { %>
                                <% if (category.post_count > 0) { %>
                                <a href="/category/<%= category.slug %>" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>
                                        <span class="badge rounded-pill me-2" 
                                              style="background-color: '<%= category.color %>'; width: 12px; height: 12px;"></span>
                                        <%= category.name %>
                                    </span>
                                    <span class="badge bg-secondary rounded-pill"><%= category.post_count %></span>
                                </a>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <!-- Search Widget -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search Posts</h5>
                    </div>
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <div class="input-group">
                                <input type="text" class="form-control" name="q" placeholder="Search posts..." required>
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Recent Posts Widget -->
                <% if (posts && posts.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Posts</h5>
                    </div>
                    <div class="card-body">
                        <% posts.slice(0, 5).forEach(function(post) { %>
                            <div class="d-flex mb-3 <%= post === posts.slice(0, 5)[posts.slice(0, 5).length - 1] ? 'mb-0' : '' %>">
                                <div class="flex-shrink-0">
                                    <% if (post.category_color) { %>
                                        <div class="rounded-circle me-3" 
                                             style="width: 12px; height: 12px; background-color: '<%= post.category_color %>'; margin-top: 6px;"></div>
                                    <% } else { %>
                                        <div class="rounded-circle bg-secondary me-3" 
                                             style="width: 12px; height: 12px; margin-top: 6px;"></div>
                                    <% } %>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fs-6"><%= post.title %></h6>
                                    <small class="text-muted">
                                        <%= new Date(post.date).toLocaleDateString('en-US', { 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>
                                    </small>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>