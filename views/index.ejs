<!-- views/index.ejs -->
<%- include('partials/header', { title: 'Home - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: false }) %>

<div class="main-content">
    <div class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1><i class="fas fa-graduation-cap me-3"></i>Welcome to Our School</h1>
                    <p class="lead">Stay updated with the latest news, announcements, and important information.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="mb-4">
                    <i class="fas fa-bullhorn me-2"></i>Latest Updates
                </h2>
                
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(function(post) { %>
                        <div class="post-card">
                            <div class="card-body p-4">
                                <h3 class="card-title h4 mb-2"><%= post.title %></h3>
                                <p class="post-date mb-3">
                                    <i class="far fa-calendar me-2"></i>
                                    <%= new Date(post.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                                
                                <!-- Post Images -->
                                <% if (post.images && post.images.length > 0) { %>
                                    <div class="post-images mb-3">
                                        <% if (post.images.length === 1) { %>
                                            <!-- Single image -->
                                            <div class="single-image text-center">
                                                <img src="<%= post.images[0].public_path %>" 
                                                     class="img-fluid rounded shadow-sm" 
                                                     alt="Post image"
                                                     style="height: 350px; width: 50%; object-fit: cover; cursor: pointer;"
                                                     onclick="openImageModal('<%= post.images[0].public_path %>')">
                                            </div>
                                        <% } else { %>
                                            <!-- Two images - side by side -->
                                            <div class="row g-2 justify-content-center">
                                                <% post.images.forEach(function(image) { %>
                                                    <div class="col-auto">
                                                        <img src="<%= image.public_path %>" 
                                                             class="img-fluid rounded shadow-sm" 
                                                             alt="Post image"
                                                             style="height: 350px; width: 250px; object-fit: cover; cursor: pointer;"
                                                             onclick="openImageModal('<%= image.public_path %>')">
                                                    </div>
                                                <% }); %>
                                            </div>
                                        <% } %>
                                    </div>
                                <% } %>
                                
                                <!-- Post Content -->
                                <div class="card-text">
                                    <%- post.content.replace(/\n/g, '<br>') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No posts available</h4>
                        <p class="text-muted">Check back later for updates and announcements.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Full size image">
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer') %>