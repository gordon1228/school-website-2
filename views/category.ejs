<!-- views/category.ejs -->
<%- include('partials/header', { title: currentCategory.name + ' - School Website' }) %>
<%- include('partials/navbar', { isAuthenticated: false }) %>

<div class="main-content">
    <div class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1>
                        <span class="badge rounded-pill me-3" 
                              style="background-color: '<%= currentCategory.color %>'; font-size: 1rem;">
                            <i class="fas fa-tag me-2"></i><%= currentCategory.name %>
                        </span>
                    </h1>
                    <% if (currentCategory.description) { %>
                        <p class="lead"><%= currentCategory.description %></p>
                    <% } else { %>
                        <p class="lead">Posts in the <%= currentCategory.name %> category</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Main content -->
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <%= currentCategory.name %>
                        </li>
                    </ol>
                </nav>
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        <%= currentCategory.name %> Posts
                        <span class="badge bg-secondary ms-2"><%= posts.length %></span>
                    </h2>
                    <a href="/" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to All Posts
                    </a>
                </div>
                
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(function(post) { %>
                        <div class="post-card">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="card-title h4 mb-0"><%= post.title %></h3>
                                    <span class="badge rounded-pill" 
                                          style="background-color: '<%= currentCategory.color %>';">
                                        <%= currentCategory.name %>
                                    </span>
                                </div>
                                
                                <p class="post-date mb-3">
                                    <i class="far fa-calendar me-2"></i>
                                    <%= new Date(post.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                                
                                <div class="card-text">
                                    <%- post.content.replace(/\n/g, '<br>') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No posts in this category</h4>
                        <p class="text-muted">There are currently no posts in the <%= currentCategory.name %> category.</p>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>View All Posts
                        </a>
                    </div>
                <% } %>
            </div>
            
            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Other Categories Widget -->
                <% if (categories && categories.length > 1) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Other Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="/" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-list me-2"></i>All Posts</span>
                                <span class="badge bg-primary rounded-pill">
                                    <%= categories.reduce((sum, cat) => sum + cat.post_count, 0) %>
                                </span>
                            </a>
                            <% categories.forEach(function(category) { %>
                                <% if (category.slug !== currentCategory.slug && category.post_count > 0) { %>
                                <a href="/category/<%= category.slug %>" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>
                                        <span class="badge rounded-pill me-2" 
                                              style="background-color: '<%= category.color %>'; width: 12px; height: 12px;"></span>
                                        <%= category.name %>
                                    </span>
                                    <span class="badge bg-secondary rounded-pill"><%= category.post_count %></span>
                                </a>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <!-- Search Widget -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search in <%= currentCategory.name %></h5>
                    </div>
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <input type="hidden" name="category" value="<%= currentCategory.slug %>">
                            <div class="input-group">
                                <input type="text" class="form-control" name="q" placeholder="Search in this category..." required>
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Category Info -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Category Info</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge rounded-pill me-3" 
                                  style="background-color: '<%= currentCategory.color %>'; width: 24px; height: 24px;"></span>
                            <div>
                                <h6 class="mb-0"><%= currentCategory.name %></h6>
                                <small class="text-muted"><%= posts.length %> post<%= posts.length !== 1 ? 's' : '' %></small>
                            </div>
                        </div>
                        <% if (currentCategory.description) { %>
                            <p class="text-muted mb-0"><%= currentCategory.description %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>